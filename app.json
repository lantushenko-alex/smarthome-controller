{
    "expo": {
        "name": "Power Cut-off Detector",
        "slug": "power-cut-off-detector",
        "version": "2.0.1",
        "platforms": ["android", "ios"],
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "scheme": "smarthomecontroller",
        "userInterfaceStyle": "automatic",
        "jsEngine": "hermes",
        "newArchEnabled": true,
        "ios": {
            "supportsTablet": true,
            "infoPlist": {
                "UIBackgroundModes": ["fetch", "processing"]
            },
            "bundleIdentifier": "com.lantushenkoao.smarthomecontroller"
        },
        "android": {
            "adaptiveIcon": {
                "backgroundColor": "#E6F4FE",
                "foregroundImage": "./assets/images/android-icon-foreground.png",
                "backgroundImage": "./assets/images/android-icon-background.png",
                "monochromeImage": "./assets/images/android-icon-monochrome.png"
            },
            "edgeToEdgeEnabled": true,
            "predictiveBackGestureEnabled": false,
            "package": "com.lantushenkoao.smarthomecontroller",
            "permissions": ["RECEIVE_BOOT_COMPLETED", "WAKE_LOCK", "REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"]
        },
        "web": {
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/splash-icon.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#ffffff",
                    "dark": {
                        "backgroundColor": "#000000"
                    }
                }
            ],
            "expo-secure-store",
            "expo-background-task"
        ],
        "experiments": {
            "typedRoutes": true,
            "reactCompiler": true
        },
        "extra": {
            "router": {},
            "eas": {
                "projectId": "d7e6a879-4c45-44d2-8915-cdcbeab9829f"
            }
        },
        "owner": "alex-lantushenko"
    }
}
